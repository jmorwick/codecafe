<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="expressions-only" class="net.sourcedestination.codecafe.restrictions.SnippetTypeWhiteList">
        <constructor-arg value="EXPRESSION"/>
    </bean>

    <bean id="playground" class="net.sourcedestination.codecafe.ExerciseDefinition">
        <constructor-arg index="0" value="playground"/>
        <constructor-arg index="1" value="1000"/>
        <constructor-arg index="2" value="full"/>
        <constructor-arg index="3">
            <list>
                <ref bean="expressions-only"/>
            </list>
        </constructor-arg>
        <constructor-arg index="4">
            <list></list>
        </constructor-arg>
    </bean>
</beans>